<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="table" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
          <TableColumn fx:id="id" minWidth="30" maxWidth="100" text="ID" />
            <TableColumn fx:id="name" minWidth="50" text="Название" />
            <TableColumn fx:id="publishingHouse" minWidth="50" text="Издание" />
            <TableColumn fx:id="year" minWidth="50" text="Год" />
        </columns>
          <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
