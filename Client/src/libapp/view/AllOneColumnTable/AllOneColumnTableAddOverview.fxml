<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="100.0" prefWidth="300.0">
    <VBox alignment="CENTER" spacing="5" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <Label fx:id="label" minHeight="-Infinity" maxHeight="Infinity" minWidth="-Infinity" maxWidth="Infinity"/>
            <TextField fx:id="name" editable="true" prefWidth="9999999999999" AnchorPane.leftAnchor="0" />
        </HBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <Button fx:id="accept" minWidth="100" onAction="#applyChange" text="Применить" />
            <Button fx:id="reject" minWidth="100"  onAction="#closeWindow" text="Отмена" />
        </HBox>
    </VBox>
</AnchorPane>
